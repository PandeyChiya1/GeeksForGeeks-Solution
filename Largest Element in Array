https://www.geeksforgeeks.org/problems/largest-element-in-array4009/1?page=1&difficulty=Basic&sortBy=submissions

class Solution {
    public int subtractProductAndSum(int n) {
        int product = 1;
        int sum = 0;

        while(n>0){
            int digit = n%10;
            product = product * digit;
            sum+= digit;

            n/=10;

        }
        return product - sum;
        
    }
}
